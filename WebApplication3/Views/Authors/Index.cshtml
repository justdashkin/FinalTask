@model IEnumerable<WebApplication3.Models.Author>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/index-tables.css" rel="stylesheet" />
<h2 style="margin-left:25px">Authors</h2>

<p class="white-button" style="margin-left:auto; margin-right: auto;">
    @Html.ActionLink("Create New", "Create")
</p>
<table id="subscribe" class="table" @*style="border-collapse: collapse !important; border: 4px double black !important;  width: 80% !important; margin-left: auto !important; margin-right: auto !important;"*@>
    <tr>
        <th @*style="border: 1px solid black;"*@>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th @*style="border: 1px solid black;"*@>
            @Html.DisplayNameFor(model => model.Surname)
        </th @*style="border:*@>
        <th @*style="border: 1px solid black;"*@></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td @*style="border: 1px solid black;"*@>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td @*style="border: 1px solid black;"*@>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td @*style="border: 1px solid black;"*@>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
